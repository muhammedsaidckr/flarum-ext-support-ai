{
    "name": "muhammedsaidckr/support-ai",
    "description": "The intelligent support a(i)gent for your Flarum community.",
    "version": "1.0.0",
    "keywords": [
        "extension",
        "flarum",
        "msc",
        "support",
        "ai",
        "gpt",
        "openai"
    ],
    "license": "mit",
    "type": "flarum-extension",
    "authors": [
        {
            "name": "Muhammed Said Çakır",
            "email": "muhammedsaidckr@gmail.com",
            "homepage": "https://mscakir.dev"
        }
    ],
    "require": {
        "php": ">= 8.1",
        "flarum/core": "^1.0.0",
        "openai-php/client": "^0.3.5"
    },
    "autoload": {
        "psr-4": {
            "MSC\\SupportAi\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/var-dumper": "^6.1"
    },
    "autoload-dev": {
        "psr-4": {
            "MSC\\SupportAi\\Tests\\": "tests/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Support AI",
            "category": "feature",
            "icon": {
                "image": "resources/assets/logo.png",
                "backgroundColor": "#E3E7F1",
                "backgroundSize": "60%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center"
            }
        },
        "extiverse": {
            "discuss": ""
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
